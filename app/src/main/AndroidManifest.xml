<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inshorts">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/inshorts_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/inshorts_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.InShorts">
        <activity android:name=".Signup"/>
        <activity android:name=".Settings"/>

        <activity android:name=".views.CategoriesActivity"/>
        <activity android:name=".views.NewsUrlDetailsActivity" />
        <activity android:name=".views.NewsFeedActivity" />
        <activity
            android:name=".views.SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CategoryPage"/>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <activity android:name=".views.SelectLanguage" />
    </application>

</manifest>