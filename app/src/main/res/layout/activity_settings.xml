<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/font"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/ic__01_left_arrow"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_toEndOf="@id/imBack"
                android:layout_marginTop="15dp"
                android:text="Options"
                android:textAllCaps="false"
                android:textColor="#D2000000"
                android:textSize="16sp"
                android:layout_toRightOf="@id/imBack" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:elevation="10dp"
            android:padding="20dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:id="@+id/rlAfterSignIn"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp20"
                    android:id="@+id/tvSignedInUser"/>
                <Button
                    android:layout_below="@+id/tvSignedInUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_white"
                    android:fontFamily="monospace"
                    android:text="Sign Out"
                    android:id="@+id/btnSignout"
                    android:textAllCaps="false"
                    android:textColor="#03A9F4"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlBeforesignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvSaveYourPref"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Save Your Preferences"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSignInTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSaveYourPref"
                    android:layout_marginHorizontal="5dp"
                    android:text="Sign in to save your Likes"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvBookmarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSignInTo"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/fira_sans"
                    android:text="and Bookmarks"
                    android:textColor="@color/white" />


                <LinearLayout
                    android:id="@+id/llcoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/tvBookmarks"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/rect_white"
                        android:fontFamily="monospace"
                        android:text="Sign In"
                        android:id="@+id/btnSignIn"
                        android:textAllCaps="false"
                        android:textColor="#03A9F4"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginTop="21dp"
                        android:src="@drawable/ic__02_facebook_1"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginTop="21dp"
                        android:src="@drawable/ic__03_google"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginTop="21dp"
                        android:src="@drawable/ic__04_twitter"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginTop="21dp"
                        android:src="@drawable/ic__05_telephone"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp" />

                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="?android:selectableItemBackground"
                android:drawablePadding="10dp"
                android:text="Language"
                android:textColor="#93666262"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic__02_typography" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="25dp"
                android:background="#7D545050" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="?android:selectableItemBackground"
                android:drawablePadding="10dp"
                android:text="Notifications"
                android:textColor="#93666262"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic__01_alarm" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="25dp"
                android:background="#7D545050" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="?android:selectableItemBackground"
                android:drawableStart="@drawable/ic__02_hoop"
                android:drawableLeft="@drawable/ic__02_hoop"

                android:drawablePadding="10dp"
                android:text="Personalize Your Feed"
                android:textColor="#93666262"
                android:textSize="18sp"


                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="25dp"
                android:background="#7D545050" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="?android:selectableItemBackground"
                android:drawableStart="@drawable/ic__04_bleach"
                android:drawableLeft="@drawable/ic__04_bleach"
                android:drawablePadding="10dp"
                android:text="HD images"
                android:textColor="#93666262"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="25dp"
                android:background="#7D545050" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="?android:selectableItemBackground"
                android:drawablePadding="10dp"
                android:text="Night Mode"
                android:textColor="#93666262"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic__06_moon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="25dp"
                android:background="#7D545050" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="?android:selectableItemBackground"
                android:drawablePadding="10dp"
                android:text="Autoplay"
                android:textColor="#93666262"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic__05_play_triangle_outline" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="25dp"
                android:background="#7D545050" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:padding="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:id="@+id/btnShareApp"
                    android:background="?android:selectableItemBackground"
                    android:drawablePadding="10dp"
                    android:text="Share this app"
                    android:textColor="#93666262"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:background="?android:selectableItemBackground"
                    android:drawablePadding="10dp"
                    android:text="Rate this app"
                    android:textColor="#93666262"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:background="?android:selectableItemBackground"
                    android:drawablePadding="10dp"
                    android:text="Feedback"
                    android:textColor="#93666262"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:background="?android:selectableItemBackground"
                    android:drawablePadding="10dp"
                    android:text="Terms And Conditions"
                    android:textColor="#93666262"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:background="?android:selectableItemBackground"
                    android:drawablePadding="10dp"
                    android:text="Privacy"
                    android:textColor="#93666262"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>